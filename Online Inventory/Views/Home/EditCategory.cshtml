@model Online_Inventory.Models.CategoryTable
@Html.ValidationSummary(true)
<style>
    h4 {
        font-family: Georgia;
        font-size: 36px;
        color: beige;
    }

    p {
        font-family: Arial, Helvetica, sans-serif;
        color: aquamarine;
    }

    label {
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        font-size: 21px;
        color: antiquewhite;
    }
</style>

@using (Html.BeginForm("EditCategory", "Home", FormMethod.Post))
{


    <div class="card-header">
        <h4>Edit Category</h4>
    </div>

    <div class="card-body">
        <div class="form-group has-success has-feedback">
            <label for="addcid">Category ID</label>
            <p>@Html.HiddenFor(model => model.categoryID)</p>
            <p>@Html.DisplayFor(model => model.categoryID)</p>
        </div>

        <div class="form-group has-success has-feedback">
            <label for="addcname">Category Name</label>
            @Html.EditorFor(model => model.categoryName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.categoryName, "", new { @class = "text-danger" })
        </div>

    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-danger" data-dismiss="modal">Reset</button>
    </div>

}

